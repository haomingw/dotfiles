#!/usr/bin/env bash

set -eu

source "$HOME/.common/functions"

should_ignore() {
  # ignore past records
  local name="$1"
  local current

  current=$(date +"%Y")

  if [[ "$name" =~ [0-9]{4}.* ]] && [[ "$name" != *"$current"* ]]; then
     return 0
  fi

  if [[ "$name" == *done* ]]; then
    return 0
  fi

  return 1
}

main() {
  program_exists gpg || return 0

  local repo
  local f target

  repo=$(git rev-parse --show-toplevel)

  exec < /dev/tty
  # shellcheck disable=SC2044
  for f in $(find "$repo" -type f -name "*.gpg"); do
    target=${f%.gpg}

    if should_ignore "$f" && [ -f "$target" ]; then
      msg "Ignoring $f"
      continue
    fi

    if [ -f "$target" ]; then
      confirm "File $target exists, overwrite?" || {
        msg "Not overwriting $target"
        continue
      }
    fi
    msg "Decrypting $f"
    gpg --decrypt "$f" > "$target"
  done
}

main
