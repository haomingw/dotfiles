# Docker {{

alias di='docker image'

# }} // namespace docker

# Rust {{

alias install-rust="[[ -d ~/.cargo ]] \
    || curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh"

# }} // namespace rust


# Openssl {{

alias encrypt='openssl enc -aes-256-cbc -salt -md sha512'
alias decrypt='openssl enc -aes-256-cbc -d -salt -md sha512'

# }}
