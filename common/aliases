# Basics {{

alias sh='bash'
alias ..='cd ..'
alias ...='cd ../..'

# }} // namespace basics

# Docker {{

alias dcstop='docker container stop $(docker ps -aq)'
alias dccl='docker container prune'
alias dicl='docker image prune -a'
alias dcl='dccl;dicl'

alias lzd='lazydocker'

# }} // namespace docker

# Git {{

alias is_in_git_repo='git rev-parse HEAD &>/dev/null'

alias lg='lazygit'

# }} // namespace git

# Launchd {{

alias cdlc='cd ~/Library/LaunchAgents'

alias lcls='launchctl list'
alias lcld='launchctl load -w'
alias lculd='launchctl unload -w'

# }} // namespace launchd
