# Basics {{

alias sh='bash'

# }} // namespace basics

# Docker {{

alias dccl='docker container stop $(docker ps -aq) && docker container prune'
alias dicl='docker rmi $(docker images -aq)'
alias dcl='dccl;dicl'

alias lzd='lazydocker'

# }} // namespace docker

# Git {{

alias is_git='git rev-parse --is-inside-work-tree &>/dev/null'

alias lg='lazygit'

# }} // namespace git
