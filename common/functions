# Basic functions {{

success() {
    echo -e "\033[32m[✔]\033[0m $@"
}

error() {
    echo -e "\033[31m[✘]\033[0m $@"
}

is_linux() {
    [[ $(uname) == "Linux" ]]
}

is_macos() {
    [[ $(uname) == "Darwin" ]]
}

program_exists() {
    which "$1" &> /dev/null
}

lnif() {
    if [ -e "$1" ]; then
        ln -sfn "$1" "$2"
    fi
}

# }}
