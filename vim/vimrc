" coc.nvim {{

if has_key(g:plugs, 'coc.nvim')
  let g:coc_global_extensions = ['coc-python']

  nmap <silent> <leader>py :CocCommand python.setInterpreter<cr>
  nmap <silent> gd <Plug>(coc-definition)
  nmap <silent> gi <Plug>(coc-implementation)
  nmap <silent> gr <Plug>(coc-references)

  function! s:check_back_space() abort
    let col = col('.') - 1
    return !col || getline('.')[col - 1]  =~# '\s'
  endfunction

  inoremap <silent><expr> <TAB>
    \ pumvisible() ? "\<C-n>" :
    \ <SID>check_back_space() ? "\<TAB>" :
    \ coc#refresh()

  inoremap <expr><S-TAB> pumvisible() ? "\<C-p>" : "\<C-h>"

  function! s:show_documentation()
    if (index(['vim', 'help'], &filetype) >= 0)
      execute 'h' expand('<cword>')
    else
      call CocAction('doHover')
    endif
  endfunction

  nnoremap <silent> K :call <SID>show_documentation()<cr>
endif

" }}

" }} // namespace plugins

" GUI Settings {{

" GVIM- (here instead of .gvimrc)
if has('gui_running')
  set guioptions=               " remove all gui options
  set lines=40                  " 40 lines of text instead of 24
  if s:linux
    set guifont=Andale\ Mono\ Regular\ 12,
      \Menlo\ Regular\ 12,
      \Courier\ New\ Regular\ 14
  elseif s:mac
    set guifont=AndaleMono:h12,
      \Menlo-Regular:h12,
      \CourierNewPSMT:h14
  elseif s:win
    set guifont=Andale_Mono:h10,
      \Menlo:h10,
      \Courier_New:h10
  endif
else
  " Enable 256 colors to stop the CSApprox warning and
  " make xterm vim shine
  if &term == 'xterm' || &term == 'screen'
    set t_Co=256
  endif
endif

" }} // namespace gui

" Functions {{

function! Tab2()
  setlocal sw=2 ts=2 sts=2 et
endfunction

function! Tab4()
  setlocal sw=4 ts=4 sts=4 et
endfunction

" Setup C file
function! C_setup()
  iabbrev inc #include
  iabbrev def #define
  iabbrev itn int
  iabbrev mian() main()

  if !filereadable(getcwd() . "/Makefile")
    let &makeprg='gcc % -DLOCAL'
  endif
endfunction

" Setup cpp file
function! Cpp_setup()
  call C_setup()
  iabbrev vi vector<int>
  iabbrev vvi vector<vector<int> >
  syn keyword cppType ll pii

  if !filereadable(getcwd() . "/Makefile")
    let &makeprg='g++ % -DLOCAL -std=c++14 -O2 -Wall -Wextra
      \ -Wpedantic -Wshadow -Wno-unused-result'
  endif

  " Clang format
  map <leader>f :py3f ~/.vim/static/clang-format.py<cr>
endfunction

" Setup python file
function! Python_setup()
  call Tab4()
  iabbrev im import
  syn keyword pythonDecorator self
  let &makeprg='python %'

  if has_key(g:plugs, 'ale')
    map <leader>f :ALEFix<cr>
  endif
endfunction

" Setup rust file
function! Rust_setup()
  if has_key(g:plugs, 'rust.vim')
    map <leader>f :RustFmt<cr>
  endif
endfunction

function! OnBattery()
  if s:mac
    return match(system('pmset -g batt'), \
      "Now drawing from 'Battery Power'") != -1
  elseif s:linux
    return readfile('/sys/class/power_supply/AC/online') == ['0']
  endif
  return 0
endfunction

function! ExecuteMacroOverVisualRange()
  echo "@".getcmdline()
  execute ":'<,'>normal @".nr2char(getchar())
endfunction

" }} // namespace functions
