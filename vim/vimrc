" Ale {{

if has_key(g:plugs, 'ale')
  let g:ale_echo_msg_error_str = 'E'
  let g:ale_echo_msg_warning_str = 'W'
  let g:ale_echo_msg_format = '[%linter%] %s [%severity%]'

  " Only run linting when saving the file
  let g:ale_lint_on_text_changed = 'never'
  let g:ale_lint_on_insert_leave = 0
  " Don't run linters on opening a file
  let g:ale_lint_on_enter = 0

  " Only run linters named in ale_linters settings.
  let g:ale_linters_explicit = 1
  let g:ale_linters = {
  \ 'cpp': 'all',
  \ 'python': ['flake8', 'mypy', 'pylint'],
  \ 'go': ['gofmt', 'golint', 'govet'],
  \ 'rust': ['cargo'],
  \ 'sh': ['shell'],
  \ 'zsh': ['shell'],
  \ 'markdown': 'all',
  \ 'yaml': 'all',
  \}

  " Fix Python files with autopep8 and yapf.
  let g:ale_fixers = {
  \ 'python': ['autopep8', 'yapf'],
  \}

endif

" }}

" Vim-go {{

if has_key(g:plugs, 'vim-go')
  nnoremap <silent> <leader>gu :GoUpdateBinaries<cr>
  let g:go_fmt_command = "goimports"
  let g:go_highlight_fields = 1
  let g:go_highlight_function_calls = 1
endif

" }}

" Rust.vim {{

if has_key(g:plugs, 'rust.vim')
  let g:rustfmt_autosave = 0
endif

" }}

" coc.nvim {{

if has_key(g:plugs, 'coc.nvim')
  let g:coc_global_extensions = ['coc-pyright', 'coc-clangd', 'coc-rust-analyzer', 'coc-json']

  nmap <silent> gd <Plug>(coc-definition)
  nmap <silent> gi <Plug>(coc-implementation)
  nmap <silent> gr <Plug>(coc-references)

  nmap <leader>rn <Plug>(coc-rename)

  function! s:check_back_space() abort
    let col = col('.') - 1
    return !col || getline('.')[col - 1]  =~# '\s'
  endfunction

  inoremap <silent><expr> <TAB>
    \ pumvisible() ? "\<C-n>" :
    \ <SID>check_back_space() ? "\<TAB>" :
    \ coc#refresh()

  inoremap <expr><S-TAB> pumvisible() ? "\<C-p>" : "\<C-h>"

  function! s:show_documentation()
    if (index(['vim', 'help'], &filetype) >= 0)
      execute 'h' expand('<cword>')
    else
      call CocAction('doHover')
    endif
  endfunction

  nnoremap <silent> K :call <SID>show_documentation()<cr>
endif

" }}

endif

" }} // namespace plugins

" GUI Settings {{

" GVIM- (here instead of .gvimrc)
if has('gui_running')
  set guioptions=               " remove all gui options
  set lines=40                  " 40 lines of text instead of 24
  if s:linux
    set guifont=Andale\ Mono\ Regular\ 12,
      \Menlo\ Regular\ 12,
      \Courier\ New\ Regular\ 14
  elseif s:mac
    set guifont=AndaleMono:h12,
      \Menlo-Regular:h12,
      \CourierNewPSMT:h14
  elseif s:win
    set guifont=Consolas:h14:cANSI,
      \Courier_New:h14
  endif
else
  " Enable 256 colors to stop the CSApprox warning and
  " make xterm vim shine
  if &term == 'xterm' || &term == 'screen'
    set t_Co=256
  endif
endif

" }} // namespace gui

" Functions {{

function! Tab2()
  setlocal sw=2 ts=2 sts=2 et
endfunction

function! Tab4()
  setlocal sw=4 ts=4 sts=4 et
endfunction

" Setup C file
function! C_setup()
  iabbrev inc #include
  iabbrev def #define
  iabbrev itn int
  iabbrev mian main

  if !filereadable(getcwd() . "/Makefile")
    let &makeprg='gcc % -DLOCAL -Wall -Wextra -Werror -Wshadow'
  endif

  if s:win
    command! Run :!a.exe
  else
    command! Run :!./a.out
  endif
endfunction

" Setup cpp file
function! Cpp_setup()
  call C_setup()
  iabbrev vi vector<int>
  iabbrev vvi vector<vector<int> >
  syn keyword cppType ll pii

  if !filereadable(getcwd() . "/Makefile")
    let &makeprg='g++ % -DLOCAL -std=c++17 -O2 -Wall -Wextra
      \ -Wpedantic -Wshadow -Wno-unused-result'
  endif
endfunction

" Setup objc file
function! Objc_setup()
  call C_setup()

  if !filereadable(getcwd() . "/Makefile")
    let &makeprg='clang -framework Foundation %'
  endif
endfunction

" Setup python file
function! Python_setup()
  iabbrev im import
  syn keyword pythonDecorator self
  let &makeprg='python %'
endfunction

" Setup bash file
function! Bash_setup()
  let &makeprg='bash %'
endfunction

" Setup Swift file
function! Swift_setup()
  let &makeprg='swiftc %'
endfunction

function! OnBattery()
  if s:mac
    return match(system('pmset -g batt'), \
      "Now drawing from 'Battery Power'") != -1
  elseif s:linux
    return readfile('/sys/class/power_supply/AC/online') == ['0']
  endif
  return 0
endfunction

function! ExecuteMacroOverVisualRange()
  echo "@".getcmdline()
  execute ":'<,'>normal @".nr2char(getchar())
endfunction

" }} // namespace functions
