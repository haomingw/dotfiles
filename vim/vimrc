" General {{

set mouse=a                     " Automatically enable mouse usage
set mousehide                   " Hide the mouse cursor while typing
scriptencoding utf-8

if has('clipboard')
  if has('unnamedplus')         " When possible use + register for copy-paste
    set clipboard=unnamed,unnamedplus
  else
    " On mac and Windows, use * register for copy-paste
    set clipboard=unnamed
  endif
endif

if !exists('g:xming_no_restore_cursor')
  function! ResCur()
    if line("'\"") <= line("$")
      silent! normal! g`"
      return 1
    endif
  endfunction

  augroup resCur
    autocmd!
    autocmd BufWinEnter * call ResCur()
  augroup END
endif

set shortmess=at                " Abbrev. of messages (avoids 'hit enter')
" Better Unix / Windows compatibility
set viewoptions=folds,options,cursor,unix,slash
set virtualedit=block
set history=1000
set tabpagemax=50
set hidden                      " Allow buffer switching without saving
set iskeyword-=.                " '.' is an end of word designator
set iskeyword-=#                " '#' is an end of word designator
set iskeyword-=-                " '-' is an end of word designator

set nobackup noswapfile nowritebackup
if has('persistent_undo')
  set undofile                " So is persistent undo ...
  set undodir=$HOME/.vim/undo
  " Maximum number of changes that can be undone
  set undolevels=1000
  " Maximum number lines to save for undo on a buffer reload
  set undoreload=10000
endif

set nrformats-=octal
set complete-=i                 " Searching includes can be slow
set updatetime=300
set ruler
set formatoptions+=j            " Delete comment character when joining commented lines
set autoread
set textwidth=0
if has('nvim')
  set lazyredraw
endif

" }} // namespace general

" Vim UI {{

try
  color gruvbox
  if exists('+termguicolors')
    let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
    let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
    set termguicolors           " enable true colors support
  endif
catch
  color desert
endtry

set background=dark
if !has('gui_running')
  highlight Normal ctermbg=NONE guibg=NONE
endif

set relativenumber
set number                      " Line numbers on
set signcolumn=number
if !exists('g:noplug')
  set cursorline                " Highlight current line
  set noshowmode                " Don't display the current mode
endif
set confirm
set showcmd                     " Show partial commands in status line
set vb t_vb=                    " Shut up bell
set backspace=indent,eol,start  " Backspace for dummies
set linespace=0                 " No extra spaces between rows
set showmatch                   " Show matching brackets/parenthesis
set incsearch                   " Find as you type search
set hlsearch                    " Highlight search terms
set winminheight=0              " Windows can be 0 line high
set ignorecase                  " Case insensitive search
set smartcase                   " Case sensitive when uppercase letter present
set wildmenu                    " Show list instead of just completing
set wildmode=full               " Command <Tab> completion, list matches
set wildignore+=*.o,*.so,*.pyc,*/__pycache__/,.git/*,.DS_Store
set whichwrap=b,s,h,l,<,>,[,]   " Backspace and cursor keys wrap too
set scrolljump=5                " Lines to scroll when cursor leaves screen
set scrolloff=3                 " Minimum lines to keep above and below cursor
set foldenable                  " Auto fold code
set list
set laststatus=2                " Display status line
set sessionoptions-=options
set viewoptions-=options

" Highlight problematic whitespace
set listchars=tab:›\ ,trail:•,extends:#,nbsp:.

" Highlight a selection on yank
au TextYankPost * silent! lua vim.highlight.on_yank()

" }} // namespace vim-ui

" Formatting {{

if !exists('g:noplug')
  set nowrap
endif
set linebreak                   " Avoid wrapping a line in the middle of a word
set autoindent                  " copy indent from previous line
set smartindent                 " enable nice indent

set shiftwidth=2                " Use indents of 2 spaces
set tabstop=2                   " An indentation every four columns
set softtabstop=2               " Let backspace delete indent
set expandtab                   " Tabs are spaces, not tabs
set smarttab
set shiftround                  " Round the indentation to the nearest multiple of “shiftwidth.”

set splitright splitbelow
set pastetoggle=<F12>           " pastetoggle (sane indentation on pastes)
set nojoinspaces                " Prevents inserting two spaces after punctuation on a join (J)

" }} // namespace formatting

" Key (re)Mappings {{

" The default leader is '\', but many people prefer ' ' or ','
" as it's in a standard location.
let mapleader = ' '
let maplocalleader = ','

if !has('gui_running')
  try
    " fix meta-keys which generate <Esc>a .. <Esc>z
    let c = 'a'
    while c <= 'z'
      exec "set <A-".c.">=\e".c
      let c = nr2char(1+char2nr(c))
    endw
    set ttimeout ttimeoutlen=50
  catch
    " neovim
  endtry
endif

" qq to record, Q to replay
nnoremap Q @q

" Wrapped lines goes down/up to next row, rather than next line in file.
nnoremap j gj
nnoremap k gk

nnoremap n nzzzv
nnoremap N Nzzzv

nnoremap }  }zz
nnoremap {  {zz
nnoremap ]] ]]zz
nnoremap [[ [[zz
nnoremap [] []zz
nnoremap ][ ][zz

" Allow to trigger background
function! ToggleBG()
  let s:tbg = &background
  " Inversion
  if s:tbg == "dark"
    set background=light
  else
    set background=dark
  endif
endfunction
nnoremap <leader>bg :call ToggleBG()<cr>
nnoremap <leader>bt :%retab!<cr>
nnoremap <leader>bi gg=G<c-o>

" Visual shifting (does not exit Visual mode)
vnoremap < <gv
vnoremap > >gv

cnoremap %% <c-r>=fnameescape(expand('%:h')).'/'<cr>
map <leader>ee :e %%
map <leader>es :sp %%
map <leader>ev :vsp %%
map <leader>et :tabe %%
map <leader>rp :%s/

command! VimConfig :e $MYVIMRC
map <leader>rl :source $MYVIMRC<cr>

" split new buffer
map <silent> <leader>ns :new<cr>
map <silent> <leader>nv :vnew<cr>

" Switch between tabs
if s:mac
  nnoremap ˙ gT
  nnoremap ¬ gt
else
  nnoremap <a-h> gT
  nnoremap <a-l> gt
endif

nnoremap [t :tabp<cr>
nnoremap ]t :tabn<cr>

" buffers
nnoremap [b :bprev<cr>
nnoremap ]b :bnext<cr>

" Move cursor in Insert mode
if s:mac
  inoremap ˙ <Left>
  inoremap ∆ <Down>
  inoremap ˚ <Up>
  inoremap ¬ <Right>
else
  inoremap <a-h> <Left>
  inoremap <a-j> <Down>
  inoremap <a-k> <Up>
  inoremap <a-l> <Right>
endif

" Move tabs
if s:mac
  nnoremap “ :call xming#tabmove(-1)<cr>
  nnoremap ‘ :call xming#tabmove(1)<cr>
else
  nnoremap <a-[> :call xming#tabmove(-1)<cr>
  nnoremap <a-]> :call xming#tabmove(1)<cr>
endif

" Emacs/terminal compatible

"" begin & end
inoremap <c-e> <End>
inoremap <c-a> <c-o>I
cnoremap <c-a> <Home>

"" move cursor by word
inoremap <a-b> <c-o>b
inoremap <a-f> <c-o>w
if s:mac
  inoremap ∫ <c-o>b
  inoremap ƒ <c-o>w
endif

"" delete forward & backward, <ctrl-h> mapped by default
inoremap <c-d> <Delete>
cnoremap <c-d> <Delete>

"" various deletes
inoremap <c-k> <c-o>D
cnoremap <c-k> <c-\>e(strpart(getcmdline(), 0, getcmdpos() - 1))<cr>
"" undoable
inoremap <c-u> <c-g>u<c-u>
inoremap <c-w> <c-g>u<c-w>

" Window:
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-k> <c-w>k
nnoremap <c-j> <c-w>j

" Resize panes
nnoremap <leader>= <c-w>=
nnoremap <leader>+ <c-w>5+
nnoremap <leader>- <c-w>5-
nnoremap <leader>> <c-w>5>
nnoremap <leader>< <c-w>5<

" Terminal
tnoremap <Esc> <c-\><c-n>
tnoremap <c-h> <c-\><c-N><c-w>h
tnoremap <c-j> <c-\><c-N><c-w>j
tnoremap <c-k> <c-\><c-N><c-w>k
tnoremap <c-l> <c-\><c-N><c-w>l

if has('nvim')
  nnoremap <leader>ts :split +terminal<cr>
  nnoremap <leader>tv :vsplit +terminal<cr>
endif

" Fast editting
nnoremap <c-s> :w<cr>
nnoremap cl ggdG
nnoremap <leader>Y :%y<cr>
inoremap <c-s> <Esc>:w<cr>a
inoremap <c-v> <Esc>pa
inoremap <c-j> <Esc>o
inoremap jj <Esc>O

" utils
nnoremap ; :
nnoremap Y y$
nnoremap <c-Up> <c-y>
nnoremap <c-Down> <c-e>
" yank text in command mode
cnoremap <c-v> <c-r>+
nnoremap <leader>pa :echo expand('%:p')<cr>
nnoremap <leader>pu :PlugUpdate!<cr>
nnoremap <leader>pc :PlugClean!<cr>

" Open new line below and above current line
nnoremap <leader>o o<esc>
nnoremap <leader>O O<esc>

nnoremap [e  :<c-u>execute 'move -1-'. v:count1<cr>
nnoremap ]e  :<c-u>execute 'move +'. v:count1<cr>

iabbrev tab2 vim: set sw=2 ts=2 sts=2 et
iabbrev tab4 vim: set sw=4 ts=4 sts=4 et
iabbrev #! #!/usr/bin/env

xnoremap @ :<c-u>call ExecuteMacroOverVisualRange()<cr>

" }} // namespace remapping

" Autocmd {{

augroup vimrc
  " Only enable relative number in normal mode
  autocmd InsertEnter * :set norelativenumber
  autocmd InsertLeave * :set relativenumber

  " Adjust viewports to the same size
  autocmd vimResized * exe "normal! \<c-w>="

  " Strip Trailing Whitespaces On Saving:
  " The 'e' flag to not give an error if there is no match
  autocmd BufWritePre *
    \ if &ft != 'markdown' && &ft != 'tex' | :silent %s/\s\+$//e | endif

  " File type settings
  autocmd FileType c :call C_setup()
  autocmd FileType cpp :call Cpp_setup()
  autocmd FileType objc :call Objc_setup()
  autocmd FileType python :call Python_setup()
  autocmd FileType sh :call Bash_setup()
  autocmd FileType swift :call Swift_setup()
augroup END

" }} // namespace autocmd

